@model ApManageStudent.Models.Student
@{
    ViewBag.Title = "ModifyStudent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Modify Student</h2>

<br />
<fieldset>
    <legend>Modify Student Information</legend>
  
    <br />
    <form action="@Url.Action("ModifyStudent","Student")" method="post" class="form-horizontal">
        @Html.HiddenFor(m => m.Id)
        <div class="row">
            <div class="col-sm-6">
                @* helpers *@
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6">
                @Html.LabelFor(m => m.TypeStudent, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.TypeStudent
                    , EnumHelper.GetSelectList(typeof(ApManageStudent.Models.Enumerators.TypeStudent))
                    , "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TypeStudent, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6">
                @Html.LabelFor(m => m.Gender, new { @class = "control-label" })
                @Html.DropDownListFor(m => m.Gender
                    , EnumHelper.GetSelectList(typeof(ApManageStudent.Models.Enumerators.Gender))
                    , "Select", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "text-danger" })
            </div>
            
        </div>
             
      
      
        <div class="row">
            <div class="col-lg-12 text-center">
                <br /><!--Etiquera salto de linea-->
                <button type="submit" class="btn btn-primary">Modify Form</button>

                <a class="btn btn-danger" href="@Url.Action("StudentsList","Student")">Cancel</a>

            </div>
        </div>
    </form>

</fieldset>

