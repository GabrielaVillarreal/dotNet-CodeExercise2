@model ApManageStudent.Models.Student
@{
    ViewBag.Title = "StudentDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student Detail</h2>
<div class="row">
    <div class="col-sm-12">
        <strong>Name</strong>
        @Model.Name
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <strong>Type Student:</strong>
        @Model.TypeStudent
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <strong>Type Student:</strong>
        @Model.Gender
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <strong>Type Student:</strong>
        @Model.LastConection
    </div>
</div>

<a class="btn btn-primary" href="@Url.Action("RegisterCourse","Course", new { idStudent = Model.Id })"> Add Course</a>
<br />
<br />
<table class="table table-responsive table-striped table-bordered">
    <thead>
        <tr>
            <td>Tittle</td>
            <td>Credits</td>
            <td>Grade</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Credits  </td>
                <td>@course.Grade</td>
                <td>
                    <button>Modify</button>
                    <button>Delete</button>
                </td>
            </tr>
        }
    </tbody>

</table>

<div>
    @Html.ActionLink("Back to List", "StudentsList")
</div>

